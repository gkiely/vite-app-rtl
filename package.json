{
  "name": "vite-app-starter",
  "private": false,
  "version": "0.0.0",
  "author": "Grant Kiely <grant.kiely@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gkiely/vite-app-starter.git"
  },
  "bugs": {
    "url": "https://github.com/gkiely/flux-machine/issues"
  },
  "keywords": [
    "vite",
    "starter",
    "react testing library",
    "typescript"
  ],
  "scripts": {
    "start": "npm run fast-install && npm run dev",
    "dev": "vite",
    "fast-install": "npm i --prefer-offline --progress=false --no-audit --no-fund",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test-all": "vitest run",
    "coverage": "vitest run; npm -s run view-coverage",
    "view-coverage": "osascript ./scripts/open-browser.scpt 'Code coverage report' 'coverage/index.html'",
    "install-latest": "npm i $(npm run -s get-latest)",
    "lint-check": "eslint --cache --ext ts,tsx src --max-warnings=0",
    "lint-fix": "eslint --cache --fix --ext ts,tsx src",
    "get-latest": "vite-node ./scripts/get-latest.ts",
    "pre-push": "concurrently -r -g 'tsc' 'prettier src --check' 'npm:lint-check' 'npm:test-all'",
    "pre-commit": "concurrently -r 'tsc' 'prettier src --write --loglevel error' && npm run lint-fix"
  },
  "pre-commit": "pre-commit",
  "pre-push": "pre-push",
  "dependencies": {
    "@types/node": "^18.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "browserslist": {
    "development": ["last 1 versions"]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "@vitejs/plugin-react": "^1.3.2",
    "c8": "^7.11.3",
    "concurrently": "^7.2.2",
    "eslint": "^8.18.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-escompat": "^3.1.0",
    "happy-dom": "^5.3.1",
    "pre-commit": "^1.2.2",
    "pre-push": "^0.1.2",
    "prettier": "^2.7.1",
    "typescript": "^4.8.0-beta",
    "vite": "^2.9.12",
    "vite-node": "^0.15.2",
    "vite-plugin-checker": "^0.4.6",
    "vitest": "^0.15.2"
  }
}
