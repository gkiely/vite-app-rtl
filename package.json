{
  "name": "vite-app-starter",
  "private": false,
  "version": "0.0.0",
  "author": "Grant Kiely <grant.kiely@gmail.com>",
  "license": "MIT",
  "volta": {
    "node": "18.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gkiely/vite-app-starter.git"
  },
  "bugs": {
    "url": "https://github.com/gkiely/flux-machine/issues"
  },
  "keywords": [
    "vite",
    "starter",
    "react testing library",
    "typescript"
  ],
  "scripts": {
    "start": "npm run fast-install && npm run dev",
    "dev": "concurrently -r -g -k 'npm:server' 'vite'",
    "server": "wrangler dev --port 8080 --local server/index.ts",
    "fast-install": "npm i --prefer-offline --progress=false --no-audit --no-fund",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test-all": "vitest run",
    "e2e": "cypress open --browser electron --component",
    "test:e2e": "cypress run -q --component --config video=false",
    "tsc": "tsc",
    "tsc-node": "tsc --project tsconfig.node.json",
    "coverage": "vitest run; npm -s run view-coverage",
    "view-coverage": "osascript ./scripts/open-browser.scpt 'Code coverage report' 'coverage/index.html'",
    "install-latest": "npm i $(npm run -s get-latest)",
    "lint-check": "eslint --cache --ext ts,tsx src --max-warnings=0",
    "lint-fix": "eslint --cache --fix --ext ts,tsx src",
    "get-latest": "vite-node ./scripts/get-latest.ts",
    "pre-push": "concurrently -r -g 'tsc' 'prettier src --check' 'npm:lint-check' 'npm:test-all'",
    "pre-commit": "concurrently -r 'tsc' 'prettier src --write --loglevel error' && npm run lint-fix"
  },
  "pre-commit": "pre-commit",
  "pre-push": "pre-push",
  "dependencies": {
    "hono": "^1.6.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.17.3"
  },
  "browserslist": {
    "development": [
      "last 1 versions"
    ]
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.14.0",
    "@testing-library/cypress": "^8.0.3",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.30.4",
    "@typescript-eslint/parser": "^5.30.4",
    "@vitejs/plugin-react": "^1.3.2",
    "c8": "^7.11.3",
    "concurrently": "^7.2.2",
    "cypress": "^10.3.0",
    "eslint": "^8.19.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-escompat": "^3.2.0",
    "happy-dom": "^6.0.0",
    "local-cypress": "^1.2.6",
    "pre-commit": "^1.2.2",
    "pre-push": "^0.1.2",
    "prettier": "^2.7.1",
    "typescript": "^4.8.0-beta",
    "vite": "^2.9.13",
    "vite-node": "^0.17.0",
    "vite-plugin-checker": "^0.4.7",
    "vitest": "^0.17.0",
    "wrangler": "^2.0.15"
  }
}
